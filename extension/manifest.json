{
  "manifest_version": 3,
  "name": "Memoray Link Grabber",
  "version": "1.0",
  "description": "Extracts educational resources like PowerPoints and documents from school websites.",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "scripting"
  ],
  "action": {
    "default_popup": "html/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"],
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  }
}
